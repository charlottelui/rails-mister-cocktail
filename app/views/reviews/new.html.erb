<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <h1>Add a new review for <%= @cocktail.name %></h1>
      <%= simple_form_for([@cocktail, @review]) do |f| %>
      <%= f.input :rating %>
      <%= f.input :content %>
      <%= f.submit "Add a review", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
