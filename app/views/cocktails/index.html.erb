<div class="container mt-3">
  <div class="d-flex justify-content-between">
  <h1>Cool Cocktails</h1>
  <%= link_to new_cocktail_path do  %>
    <h2><i class="fas fa-plus"></i><i class="fas fa-cocktail"></i></h2>
  <% end %>
  </div>
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/300x300/?cocktail)">
      <%= link_to cocktail.name, cocktail_path(cocktail) %>
      </div>
    <% end %>
  </div>
</div>
