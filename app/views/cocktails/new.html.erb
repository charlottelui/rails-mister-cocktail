<div class="container mt-5">
  <div class="row">
    <div class="col-6 offset-3">
      <h1>Create a new cocktail</h1>
      <%= simple_form_for(@cocktail) do |f| %>
      <%= f.input :name %>
      <%= f.input :photo, as: :file %>
      <%= f.submit "Create a cocktail", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
