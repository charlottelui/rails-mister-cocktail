<div class="container mt-3">
  <div id="header" class="d-flex justify-content-between">
    <h1><%= @cocktail.name %></h1>
    <%= link_to "Add a review", new_cocktail_review_path(@cocktail)  %>
  </div>


  <div class="d-flex justify-content-between">
    <div class="doses">
      <h3>Ingredients:</h3>
      <% @cocktail.doses.each do |dose| %>
        <div class="d-flex">
          <p><%= dose.ingredient.name %></p>
          <p class="ml-3"><%= dose.description %></p>
          <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="fas fa-trash-alt ml-3"></i>
          <% end %>
        </div>
      <% end %>
    </div>
    <div id="reviews">
      <h3>Reviews</h3>
      <% @cocktail.reviews.each do |review| %>
        <div class="d-flex">
          <%= review.content %>
          <ul class="list-inline ml-3">
            <% review.rating.times do %>
            <li class="list-inline-item"><i class="fas fa-star"></i></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>


  </div>

  <div id="form">
    <h2>Add an ingredient</h2>
    <%= simple_form_for ([@cocktail,@dose]) do |f| %>
      <%= f.input :ingredient, collection: Ingredient.all, input_html: { class: 'select2' }, include_hidden: false %>
      <%= f.input :description %>
      <%= f.submit "Add the ingrediant", class: 'btn btn-primary' %>
    <% end %>
  </div>


  <%= link_to cocktails_path do  %>
    <div class="d-flex">
      <i class="fas fa-cocktail"></i>
      <p>List of cocktails</p>
    </div>
  <% end %>
</div>
