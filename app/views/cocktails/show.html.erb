<div class="container mt-3">
  <h1><%= @cocktail.name %></h1>


  <div class="d-flex">

  <div class="doses">
    <h3>Ingredients:</h3>
    <% @cocktail.doses.each do |dose| %>
      <div class="d-flex">
        <p><%= dose.ingredient.name %></p>
        <p class="ml-3"><%= dose.description %></p>
        <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="fas fa-trash-alt ml-3"></i>
        <% end %>
      </div>
    <% end %>
  </div>

    <div id="form">
      <h2>Add an ingredient</h2>
      <%= simple_form_for ([@cocktail,@dose]) do |f| %>
        <%= f.input :ingredient, collection: Ingredient.all, input_html: { class: 'select2' }, include_hidden: false %>
        <%= f.input :description %>
        <%= f.submit "Add the ingrediant", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>


  <%= link_to cocktails_path do  %>
    <div class="d-flex">
      <i class="fas fa-cocktail"></i>
      <p>List of cocktails</p>
    </div>
  <% end %>
</div>
